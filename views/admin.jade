extends layout

block header
	style(type="text/css")		
		body
		{	
			width:960px;
			margin-left:auto;
			margin-right:auto;
			font-family:monospace;
			background-color:#bbb;
			}
		p.t {
		}
		p.p {
			font-weight:bold;
			text-align:center;
		}
		td{
			border:1px #fff solid;
			padding: 5px 5px 5px 5px;
		}
		td.msg{
			width:720px;
		}
		th{
			color:#111;
			background-color:#aaa;
			padding: 5px 5px 5px 5px;
			font-weight:bold;
			
		}
		input{
			padding:2px 2px 2px 2px;
			margin:2px 2px 2px 2px;
			font-family:"NotCourierSansRegular",monospace;
				border:1px #888 solid;
		}
		label{
			text-decoration:underline;
			margin-right:1em;
			margin-left:1em;
		}
	
block content
	h1 Suppression de messages du Vox Populi 
	table
		tr
			th message
			th action
		each m in msg
			tr
				td.msg #{m}
				td 
					input(type="button",value="Supprimer",onclick="document.location='/del?msg="+m+"'")
	
	